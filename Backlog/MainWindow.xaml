<Window x:Class="Backlog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backlog"
        mc:Ignorable="d"
        Title="LoginWindow" Height="500" Width="400">
    <StackPanel Orientation="Vertical" FocusManager.FocusedElement="{Binding ElementName=txtUsername}">
        <TextBox x:Name="txtUsername" Width="150" Margin="0, 200, 0, 0" FontFamily="Rockwell" FontSize="16"></TextBox>
        <TextBox x:Name="txtPassword" Width="150" Margin="0, 20, 0, 0" FontFamily="Rockwell" FontSize="16"></TextBox>
        <Button x:Name="btnLogin" Width="150" Height="30" Content="Login" Margin="0, 20, 0, 0" Cursor="Hand" FontSize="16" FontFamily="Rockwell" Background="#FFFFCDB0" BorderThickness="2"></Button>
        <Button x:Name="btnRegister" Width="150" Height="30" Content="Register" Margin="0, 20, 0, 0" Cursor="Hand" FontSize="16" FontFamily="Rockwell" Background="#FFFFCDB0" BorderThickness="2"></Button>
    </StackPanel>
</Window>
